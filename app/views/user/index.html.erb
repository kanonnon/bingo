<div class="main users-index">
  <div class="container">
    <h1 class="users-heading">ランキング</h1>
    <% @users.each do |user| %>
      <div class="users-index-item">
        <div class="user-left">
          <img src="<%= "/user_images/#{user.image_name}" %>">
        </div>
        <div class="user-right">
          <div class="name_score">
            <%= link_to(user.name, "/user/#{user.id}") %>
            <p><%= "#{user.first}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
